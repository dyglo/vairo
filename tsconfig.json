{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020"
    },
    "transpileOnly": true,
    "skipProject": true
  },
  "include": [
    "server.ts",
    "middleware/**/*.ts",
    "utils/**/*.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
